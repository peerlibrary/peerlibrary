@import url("http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600")
@import variables

/* General
========== */

html, button, input, select, textarea
  color #22

body
  font 14px "Source Sans Pro", sans-serif
  line-height default-line-height
  margin 0 auto
  background light-grey

::-moz-selection
  background selection-color
  text-shadow none

::selection
  background selection-color
  text-shadow none

:focus 
  outline none

::-moz-focus-inner 
  border 0

hr
  display block
  height 1px
  border 0
  border-top 1px solid #dee7e9
  margin 1em 0
  padding 0

img
  vertical-align middle

fieldset
  border 0
  margin 0
  padding 0

textarea
  resize vertical

.chromeframe
  margin 0.2em 0
  background #dee7e9
  color #000
  padding 0.2em 0

a, ul.top-menu li .search-wrapper .development-comment a
  display inline
  padding 0
  color blue-accent
  text-decoration none

a:hover
  text-decoration underline

ul.top-menu li .search-wrapper .development-comment a:hover
  text-decoration underline !important

h2
  font-size 18px
  font-weight 300
  margin-top 0

input
  font-family "Source Sans Pro", sans-serif
  outline none

/* Buttons
================= */

.btn
  height 32px
  font-size 14px
  line-height 24px
  padding 0 11px
  color #444
  background white
  border 1px solid #ccc
  border-radius 2px
  font-weight normal
  cursor pointer 

.btn:hover
  background #e3e3e3

.btn.blue
  background bg-blue
  border 1px solid border-blue
  color white
  
.btn.blue:hover
  background hover-blue

/* ui dropdown
================*/
.ui-dropdown
  padding 6px 10px
  border 1px solid transparent
  color icon-gray
  cursor pointer

.ui-dropdown:hover
  border-color #e3e3e3
  color icon-gray-hover

/* Helper classes
================= */
.ir
  background-color transparent
  border 0
  overflow hidden
  *text-indent -9999px

.ir::before
  content ""
  display block
  width 0
  height 150%

.pull-left
  display inline-block!important
  float left!important

.pull-right
  display inline-block!important
  float right!important

.hidden
  display none!important
  visibility hidden

.visuallyhidden
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px

.visuallyhidden.focusable:active, .visuallyhidden.focusable:focus
  clip auto
  height auto
  margin 0
  overflow visible
  position static
  width auto

.simple
  margin-top 75px

.invisible
  visibility hidden

.clearfix::before, .clearfix::after
  content ""
  display table

.clearfix::after
  clear both

.clearfix
  *zoom 1
