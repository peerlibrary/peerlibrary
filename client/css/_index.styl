@import 'variables.import'

.landing
  canvas
    width 100%
    height 100%
    top 0
    left 0
    position absolute
    z-index -1 

.big-logo
  position fixed 
  width 300px
  top 25%
  left 50%
  margin -80px 0 0 -160px
  text-align center
  padding 10px

  img
    width 150px

  h1
    font-family "Fira Sans", sans-serif
    font-size 50px
    font-weight 300
    color rgba(20,20,20,0.8)
    /* Centers the i in the middle of the logo */
    margin 0 0 0 -3px
    user-select none

    .peer
      /* Centers the i in the middle of the logo */
      letter-spacing -0.02em

.statistics
  width auto
  height auto
  margin 0
  padding 0
  position fixed
  bottom 50px
  left 50%
  margin-left -363px
  list-style none

  li
    display inline-block
    float left
    position relative
    text-align center
    width 120px
    height 50px
    margin 0
    padding 10px 0 20px 0
    vertical-align middle
    border-right 2px solid rgba(40,40,40,0.2)

    a
      color black
      transition color 0.2s

    a:hover
      color blue-accent
      text-decoration none

    .label, .value
      display block

    .label
      font-weight 600

    .value
      font-weight 300
      font-size 40px
    
  li:last-child
    border 0

.latest-blog-post
  position fixed
  left 50%
  top 75%
  width 644px
  margin -40px 0 0 -322px

  h3
    a
      display block
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

.background-pause
  position fixed
  /* Position it above header */
  z-index 5001
  top 20px
  left 25px
  border 1px solid border-blue
  border-radius 50%
  opacity 0.2
  transition opacity 0.2s

  button
    background none
    border none
    /* Shape borders for focus outline */
    border-radius 50%
    color border-blue
    font-size 16px
    width 28px
    height 28px
    padding 0

    &::before
      padding 5px
      margin 0

    &.icon-play::before
      margin-left 1px

  .ui-tooltip
    position absolute
    left 100%
    top 50%
    margin -21px 0 0 15px
    opacity 0
    visibility hidden
    transition all 0.2s

  &:hover
    opacity 1

    button
      background none
      border none

    .ui-tooltip
      opacity 1
      visibility visible


