@import 'variables.import'

.search-bar

  input
    border none
    background none
    font-weight 300

.input-and-button
  display table
  width 100%

  input
    display table-cell
    width 70%
    padding 10px
    border none
    box-sizing border-box
    font-weight 300
    background-color white

  button
    display table-cell
    border none
    color white
    width 30%
    padding 10px
    background-color blue
    box-sizing border-box

  button:hover
    background-color blue-accent
