@import 'variables.import'


/* General form controls
======================== */

input, button
  display inline-block
  padding 5px
  font-size 13px
  border 1px solid box-shadow-border
  transition all 0.2s

input
  min-width 10em

input.invalid
  border 1px solid red

input:focus, button:focus
  border 1px solid #a1b3c2
  box-shadow 0 0 2px #a1b3c2

button
  background-color box-shadow-background

  &:hover
    background-color box-shadow-border

  &.default
    background-color box-shadow-background-default

    &:hover
      background-color box-shadow-border

  &.borderless
    border-color transparent
    background-color transparent
    width auto !important
    font-size 14px

    &:hover
      border 1px solid box-shadow-border

/* Dropdown
=========== */

.dropdown-trigger
  position relative
  cursor pointer

  .dropdown-anchor
    display none
    position absolute
    bottom 0
    left 0
    right 0
    z-index 10

    &::after
      content ''
      position absolute
      border-style solid
      border-width 0 8px 8px
      border-color #FFFFFF transparent
      display block
      width 0
      z-index 1
      margin-left -10px
      top 1px
      left 50%

    &::before
      content ''
      position absolute
      border-style solid
      border-width 0 8px 8px
      border-color rgb(210,210,210) transparent
      display block
      width 0
      z-index 0
      margin-left -10px
      top 0
      left 50%

    .dropdown
      background white
      border-color rgb(210,210,210)
      border-style solid
      border-width 1px
      position  absolute
      padding 5px 0
      margin 0
      list-style none
      top 8px
      left 0
      box-shadow 0 2px 5px box-shadow-shadow
      cursor default

      &.right-aligned
        left auto
        right 0

      .menu-item
        button
          width 100%
          padding 5px 20px
          white-space nowrap
          border none
          background transparent

          &:hover
            background box-shadow-border

          &.danger:hover
            background error-red
            color white

      h3
        font-weight 300

      .hint
        font-size 13px

/* Edit button
============== */

.edit, .meta-menu .edit
  display none
  vertical-align middle
  background none
  /* For focused style */
  padding 4px
  border 1px solid transparent

  &:hover
    background none
    border-color box-shadow-border
    color blue-accent

.editable:hover
  .edit
    display inline-block

h1
  .edit
    margin-top -5px

.sidebar
  .edit
    width auto

/* Add control
============== */

.add-control
  .member
    .add-button
      display block
      border none
      background none
      padding 5px
      height 34px

      .inline-item
        display block
        padding-left 30px

        .avatar
          width 24px
          text-align center
          position absolute
          left 0

          img
            position absolute
            left 0

          &::before
            position static
            vertical-align middle
            margin-top -2px

        .name
          text-decoration none

  .add-and-invite
    width 100%
    margin-top 10px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

/* Sidebar
========== */
.sidebar
  position relative
  padding 10px 10px 30px 10px
  border-left 1px solid #dee7e9

/* Sidebar, dropdown and settings contents
========================================== */
.sidebar
.dropdown
.settings-group
  h3
    font-weight 300

  label
    display block
    margin-bottom 10px
    font-size 0.9em
    font-weight 300

  input, button, select, .control
    display block
    width 235px
    box-sizing border-box

  .section
    margin-bottom 20px

  .input-and-buttons
    button
      width auto

    input
      border-right-width 0

    input:focus
      border-right-width 1px

  .add-control
    border 1px solid box-shadow-border
    background white
    color black

    input, input:focus
      width 233px
      border none
      box-shadow none

    .add-button:hover
      background-color box-shadow-border

    .member
      display block
      width 100%

      .add-button
        display block
        width 100%

    .member:last-of-type
      margin-bottom 0

  .add-control-results
    padding 10px

  .access-results
  .group-member-results
    margin 0
    padding 0

  .settings
    h2
      margin-bottom 7px

    .section
      margin -1px 0 0

    .admin-tools
      display inline-block

/* Meta menus and jQuery UI widgets
=================================== */
.meta-menu, .ui-widget
  input, button
    display block
    padding 8px 12px
    border none
    box-sizing border-box
    font-weight 300
    font-size 13px
    transition all 0.2s
    border-radius 2px

  input
    width 100%
    padding 7px
    background-color white

  button
    color white
    background-color rgba(120,120,120,0.9)

  button:hover
    background-color rgba(80,80,80,0.9)

  button.default
    background-color rgba(110, 110, 110, 0.9)

  button.default:hover
    background-color rgba(80, 80, 80, 0.9)

  button:focus
    box-shadow 0 0 0 2px rgba(255, 255, 255, 0.4)

  .input-and-buttons
    width 100%

    input, button
      border-radius 0

    input
      border-radius 2px 0 0 2px

    button:first-child
      border-radius 0 2px 2px 0

  .toggle-list
    list-style none
    padding 10px
    background-color rgba(120,120,120,0.9)
    border-radius 2px

  .toggle-list-item
    button
      background none
      border none
      border-radius 2px
      color white
      width 100%
      text-align left
      padding 10px 10px 10px 30px
      position relative

    button:hover
      background overlay-translucent

    .icon-check::before
      position absolute
      left 7px
      top 13px

  .edit:hover
    color #ccc

  .add-control
    background white
    border-radius 2px

    .add-button
      display block
      width 100%
      padding 5px
      margin-bottom 0
      background none
      text-align left

      .inline-item
        color black

    button
      background-color rgba(120,120,120,0.2)
      color black

    button:hover
      background-color rgba(120,120,120,0.3)

  input:focus
    box-shadow none

    .access-results
      margin 0

  .add-control-results
    color black
    padding 0 10px 10px
    font-weight 300

/* jQuery UI widgets
==================== */

.ui-widget
  border none
  border-radius 2px
  padding 0
  background overlay-translucent
  color white
  font-family "Source Sans Pro", sans-serif
  font-size 14px

  .ui-widget-header
    border 0
    border-radius 2px 2px 0 0
    padding 8px 10px
    background overlay-translucent
    color white
    font-size 1.17em
    font-weight bold

    .ui-state-default
      background transparent

    .ui-state-hover
      color #ccc

  .ui-widget-content
    padding 10px
    margin 0
    color white
    background none

    a
      color white

  .ui-state-default
    border none
    color white
    background rgba(120,120,120,0.9)

  .ui-state-hover
    background rgba(80,80,80,0.9)

  input, button.ui-widget
    font-family "Source Sans Pro", sans-serif
    font-size 13px

  .ui-button-text
    padding 0

  .ui-icon
    background none
    text-indent 0

  .ui-icon-closethick::before
    font-size 14px
    font-family "glyph"
    content '\e803'


.ui-dialog
  .ui-dialog-titlebar
    .ui-dialog-title
      margin 0

  .ui-dialog-buttonpane
    padding-top 0
    border none

    button
      display inline-block
      margin 0 0 0 10px

    button.alternative
      position absolute
      left 0

.ui-slider .ui-widget-header
  padding 0

.ui-tooltip
  background rgb(14,41,57)
  color white
  text-align center
  border-radius 0
  box-shadow none
  padding 5px

  &::before
    content ''
    position absolute
    border-style solid
    border-width 8px 8px 0
    border-color rgb(14,41,57) transparent
    display block
    width 0
    height 0
    margin-left -8px
    bottom -8px
    left 50%

  &.right
    &::before
      border-width 8px 8px 8px 0
      border-color transparent rgb(14,41,57)
      margin-top -8px
      left -8px
      margin-left 0
      top 50%
      bottom auto

/* Layouts
========== */

.input-and-buttons
  font-size 13px
  min-width 15em

  input, button
    box-sizing border-box

  button
    float right

  .input
    overflow hidden

    input
      width 100%
      min-width auto

/* Form messages
================ */

.form-message
  display inline-block

.form-message.info
  color green

.form-message.error
  color red
