@import 'variables.import'

.notifications
  position fixed
  width 300px
  top 75px
  left 50%
  list-style none
  margin 0
  padding 0
  margin-left -150px
  /* Higher than importing overlay */
  z-index 7000

  .notification
    position absolute
    display block
    padding 20px
    box-shadow 0 2px 5px rgba(14,41,57,0.34)
    margin-bottom 10px
    left 0
    right 0
    top 0

    .button
      float right

    .additional
      display none

      .error-logged
        font-size smaller
        font-style italic
        text-align center

  .animate
    transition top .5s

  .fast-animate
    /* Twice as fast as additional information slide down animation time */
    transition top .1s ease-out

  .success
    background-color #d9f5d5

  .warn
    background-color #f8f8d9

  .error
    background-color #f4e0dc