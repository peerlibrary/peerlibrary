@import 'variables.import'

section.index
  margin-top simple-margin-top + 10px

  .results-list
    position relative

    .item-list
      margin-top 5px

  .results-count, .no-results, .results-loading
    font-size 16px
    font-weight 300

  .search-invitation
    margin-top 250px
    width 100%
    text-align center
    font-size 20px
    font-weight 300

  /* Elements appearing below search results should be centered instead of left-aligned */
  .results-load-more, .item-list + .results-loading
    text-align center

  .under-development
    opacity 0.5
    margin-top 40px

    .hint
      opacity 1
      font-weight 300
      margin-bottom 20px

  footer
    margin-top 40px

/* Results styles
================= */

ol.item-list
  list-style none
  padding 5px

  li.result-item
    position relative
    background white
    padding 20px
    margin 10px 0
    border-radius 2px
    box-shadow 0 0 0 1px box-shadow-border
    transition box-shadow 0.2s

    .edit, .library-menu
      display inline-block
      visibility hidden
      opacity 0

    .editable-control
      width 100%

    .library-menu
      position absolute
      right 10px
      top 0
      left auto
      width 22px
      padding 10px 0
      border-radius 0 0 2px 2px
      min-height 0
      transition all 0.2s

      .library-menu-button:first-of-type
        margin-top 5px

      .icon
        float right
        font-size 16px

    .library-menu:hover
      border-radius 2px
      width 300px
      padding 10px
      right 0

  li.result-item:hover
    box-shadow 0 0 0 1px box-shadow-border, 0 2px 5px box-shadow-shadow

    .edit, .library-menu
      visibility visible
      opacity 1

.abstract
  display none

.article-summary
  .article-summary-data
    display inline-block
    float left
    width 85%

    .authors span::after
      content ","

    .authors span:last-child::after
      content ""

/* Article thumbnail
==================== */

.article-summary
  .article-thumbnail
    float right
    display inline-block
    width 95px
    border 1px solid #c9d0dc
    border-radius 2px

  .article-thumbnail > img
    width 90px
    height auto
    float right

ul.scrubber
  margin 0
  width 95px
  height 125px

  li
    display none
